{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "plugin:testing-library/react"
  ],
  "plugins": ["react", "prettier", "testing-library"],
  "rules": {
    "testing-library/no-node-access": "off",
    "jest/no-conditional-expect": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  }
}
